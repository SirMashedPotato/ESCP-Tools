<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--__________ Misc Items __________-->

    <!-- Bones -->

    <ThingDef ParentName="ResourceBase">
        <defName>ESCP_Item_Bone</defName>
        <label>Bones</label>
        <description>Common bones found within most organic creatures.</description>
        <graphicData>
            <texPath>Things/Item/Resource/Misc/Bones</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <statBases>
            <MarketValue>0.2</MarketValue> <!-- Can be used like meat in recipes -->
            <Mass>0.095</Mass>
            <MaxHitPoints>65</MaxHitPoints>
            <Flammability>0.2</Flammability>
        </statBases>
        <thingCategories>
            <li>ResourcesRaw</li>
        </thingCategories>
    </ThingDef>

    <!-- Fat -->

    <ThingDef ParentName="ResourceBase">
        <defName>ESCP_Item_Fat</defName>
        <label>Fat</label>
        <description>Common fat found within most organic creatures. Can be used to fuel certain buildings.</description>
        <graphicData>
            <texPath>Things/Item/Resource/Misc/Fat</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <statBases>
            <MarketValue>0.3</MarketValue>
            <Mass>0.025</Mass>
            <MaxHitPoints>50</MaxHitPoints>
            <Flammability>0.6</Flammability>
        </statBases>
        <thingCategories>
            <li>ResourcesRaw</li>
        </thingCategories>
    </ThingDef>

    <!-- Firewood -->

    <ThingDef ParentName="ResourceBase">
        <defName>ESCP_Fuel_Firewood</defName>
        <label>Firewood</label>
        <description>Wood thats been chopped and gathered for fuel.</description>
        <graphicData>
            <texPath>Things/Item/Resource/Misc/Firewood</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <statBases>
            <MarketValue>0.3</MarketValue>
            <Mass>0.1</Mass>
            <MaxHitPoints>50</MaxHitPoints>
            <Flammability>0.7</Flammability>
        </statBases>
        <thingCategories>
            <li>ResourcesRaw</li>
        </thingCategories>
    </ThingDef>

</Defs>
